<resources>

    <declare-styleable name="YoobieInput">
        <attr name="inputIcon" format="integer" />
        <attr name="placeholder" format="string" />
        <attr name="inputText" format="string" />
    </declare-styleable>

    <declare-styleable name="YoobieSpinner">
        <attr name="spinnerIcon" format="integer" />
    </declare-styleable>

    <declare-styleable name="YoobieText">
        <attr name="textIcon" format="integer" />
        <attr name="text" format="string" />
    </declare-styleable>

    <declare-styleable name="WaveView">
        <attr name="waveColor" format="color"/>
        <attr name="waveBorderWidth" format="dimension"/>
        <attr name="waveBorderRadius" format="dimension"/>
        <attr name="waveAmplitude" format="dimension"/>
        <attr name="waveMax" format="integer"/>
        <attr name="waveProgress" format="integer"/>
    </declare-styleable>

</resources>
